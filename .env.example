# =================================
# Server Configuration
# =================================
NODE_ENV=development
PORT=3001

# =================================
# Database Configuration (Required)
# =================================
DATABASE_HOST=localhost
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_NAME=idea_manager
DATABASE_PORT=5432

# Database SSL Configuration
DATABASE_SSL_MODE=require
# Set to 'false' only if using self-signed certificates in production
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Database Pool Settings
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000

# =================================
# Authentication (Required)
# =================================
# Must be at least 32 characters in production
JWT_SECRET=your-jwt-secret-key-change-this-in-production
# JWT token expiration (default: 7d)
JWT_EXPIRES_IN=7d

# =================================
# Rate Limiting Configuration
# =================================
# General API rate limit (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auth endpoints rate limit (login/register)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Password reset rate limit
PASSWORD_RESET_RATE_LIMIT_WINDOW_MS=3600000
PASSWORD_RESET_RATE_LIMIT_MAX_REQUESTS=3

# Password reset token expiration in milliseconds (default: 1 hour)
PASSWORD_RESET_TOKEN_EXPIRES_MS=3600000

# =================================
# CORS Configuration
# =================================
# Comma-separated list of allowed origins
FRONTEND_URL=http://localhost:5173

# =================================
# Logging Configuration
# =================================
# Log level: fatal, error, warn, info, debug, trace
LOG_LEVEL=info

# =================================
# Frontend Configuration (Vite)
# =================================
VITE_API_URL=http://localhost:3001/api
